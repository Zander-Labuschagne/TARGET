//foo
// ^ source.tmc comment.line
// <- comment.line

/* foo */
//^^^^^ source.tmc comment.block
// <- punctuation.definition.comment.begin
//     ^^ punctuation.definition.comment.end

include "target.tmh"
// <- keyword.control.include.tmc
//      ^ string punctuation.definition.string.begin
//       ^^^^^^^^^^ string.quoted.double.tmc
//                 ^ string punctuation.definition.string.end

"Hello,\tt World! // not a comment";
// ^ string.quoted.double
//                  ^ string.quoted.double - comment

EXEC("set_flight_submode_tms(1);");
// <- constant.language.tmc
//    ^^^^^^^^^^^^^^^^^^^^^^ source.c meta.function-call.c variable.function.c
//                          ^ source.c meta.function-call.c meta.group.c punctuation.section.group.begin.c
//                           ^ source.c meta.function-call.c meta.group.c constant.numeric.c
//                            ^ source.c meta.function-call.c meta.group.c punctuation.section.group.end.c
//                             ^ source.c punctuation.terminator.c
//                              ^^ constant.language.tmc
//                                ^ punctuation.terminator.tmc

system("spawn -w \"D:\\DCS A-10C\" \"D:\\DCS A-10C\\bin\\Launcher.exe\"");
//^^^^^^ constant.language.tmc
//      ^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^^ source.dosbatch
//                                                                     ^^ constant.language.tmc
//                                                                       ^ punctuation.terminator.tmc

MapKey(&Joystick, H3U, '-'); // Increase Radar Range
// <- variable.function.tmc
//     ^ keyword.operator.arithmetic.tmc
//      ^^^^^^^^ variable.language.tmc
//                ^^^ variable.parameter.tmc
//                     ^^^ string.quoted.single


int square(int x)
// <- storage.type
//  ^ meta.function entity.name.function
//         ^ storage.type
{
    MapKey
    return x * x;
//  ^^^^^^ keyword.control
}